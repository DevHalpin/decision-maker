  <%- include("partials/_header") %>

  <body>
    <main>
      <h1>You made a poll!</h1>
      <!-- Links to share the poll and link to view the results -->
      <a id="poll-links" href="/user/<%= id %>"
        >View your poll here and share this user link with your friends: localhost:5000/user/<%= id %></a
      ><br />
      <a id="poll-links" href="/admin/<%= id %>">Check out the results here: localhost:5000/admin/<%= id %> </a
      ><br />
    </main>
  </body>
</html>
